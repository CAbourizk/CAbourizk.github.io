{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart of UK mortgage rates",
  "data": {
    "url": "https://api.economicsobservatory.com/gbr/mort?vega"
  },
  "title": {
    "text": "Mortgage rates",
    "subtitle": "Average Interest rate, % | Source: BoE through ECO API"
  },
  "transform": [
    {"calculate": "datum.value *100", "as":"value"}
  ],
  "mark": "line",
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "scale": {
        "domain":["2000-01-01", "2024-12-31"],
        "clamp": true
        }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "%"
      }
    }
  }
    }
  