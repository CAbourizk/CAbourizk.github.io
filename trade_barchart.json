{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {"url": "https://raw.githubusercontent.com/CAbourizk/CAbourizk.github.io/refs/heads/main/trade_data.csv"},
  
  "width": 200,
  
  "title": {
    "text": "Goods and services trade",
    "subtitle": "2024, $m USD"},

  "mark": {
    "type": "bar",
    "tooltip": true},

  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "Country"
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "axis":{
        "title": "Trade Value ($m USD)"
      },
      "stack": "zero"
    },
    "color": {
      "field": "Trade_Category",
      "type": "nominal",
      "title": "Category"
    },
    "order": {
      "field": "Trade_Category",
      "sort": "ascending"
    }
    },
     "config": {
      "view": {
        "stroke": null
      }
     }
}
