{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Batting totals and averages by place of birth",
  "data": {
    "url": "https://raw.githubusercontent.com/CAbourizk/CAbourizk.github.io/refs/heads/main/Batting_average.csv",
    "format": {"type": "csv"}
},
  "mark": "circle",
  "encoding": {
    "x": {"field": "Runs", "type": "quantitative", "scale": {"domainMin": 2500}, "title": "Total World Cup Runs"},
    "y": {"field": "Avg", "type": "quantitative", "scale": {"domainMin": 35}, "title": "World Cup Batting Average"},
    "color": {"field": "City", "type": "nominal"},
    "size": {"value": 450},
    "tooltip":[
      {"field": "City", "type": "nominal"},
      {"field": "Runs", "type": "quantitative"},
      {"field": "Avg", "type": "quantitative"}
    ]
  }
  }
