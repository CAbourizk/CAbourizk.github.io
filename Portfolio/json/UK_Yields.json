{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart of UK Gilt yields",
  "data": {
    "url": "https://api.economicsobservatory.com/gbr/intr?vega"
  },
  "title": {
    "text": "10 Year Gilt",
    "subtitle": "Yield, % | Source: BoE through ECO API"
  },
  "height": 300,
  "width": "container",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "transform": [
    {
      "filter": "datum.date >= toDate('2000-01-01') && datum.date <= toDate('2024-12-31')"
    },
    {"calculate": "datum.value *100", "as":"value"}
  ],
  "mark": {"type": "line", "color": "#8CAA9E"},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "scale": {
        "domain":["2000-01-01", "2024-12-31"],
        "clamp": true
        }
      },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "%",
        "titleColor": "#122B39",
        "grid": false
      }
    }
  },
  "config": {}
}
