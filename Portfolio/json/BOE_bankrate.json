{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Bank Rate",
    "anchor": "middle",
    "subtitle": "Rate, % | Source: BoE through ECO API",
    "fontSize": "14",
    "subtitleFontSize": "12",
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "height": 300,
  "width": "container",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "background": "#ffffff",
  "view": {
    "fill": "#ffffff",
    "strokeOpacity": 0
  },
  "data": {
    "url": "https://api.economicsobservatory.com/gbr/brate?vega",
    "format": {
      "type": "json"
    }
  },
  "transform": [
    {
      "filter": "datum.date >= toDate('2000-01-01') && datum.date <= toDate('2024-12-31')"
    }
  ],
  "mark": {
    "type": "line",
    "color": "#f4134d",
    "strokeWidth": "2"
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "scale": {
        "domain": [
          "2000-01-01",
          "2024-12-31"
        ],
        "clamp": true
      },
      "axis": {
        "title": "Year",
        "titleColor": "#122B39",
        "grid": true,
        "gridColor": "#d9d9d9",
        "gridWidth": 1
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": {
        "title": "%",
        "titleColor": "#122B39",
        "grid": false
      }
    }
  }
}
