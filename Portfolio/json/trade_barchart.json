{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {"url": "https://raw.githubusercontent.com/CAbourizk/CAbourizk.github.io/refs/heads/main/trade_data.csv"},
  
  "width": "container",
  
  "title": {
    "text": "Goods and services trade",
    "subtitle": "2024, $m USD"},

  "mark": {
    "type": "bar",
    "tooltip": {"content": "data"}},

  "encoding": {
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "Country"},
      {"field": "Trade_Category", "type": "nominal", "title": "Trade Type"},
      {"field": "Value", "type": "quantitative", "title": "Value ($m USD)", "format": ","}
    ],
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "Country"
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "axis":{
        "title": "Trade Value ($m USD)"
      },
      "stack": "zero"
    },
    "color": {
      "field": "Trade_Category",
      "type": "nominal",
      "title": "Category",
      "scale": {
        "range": ["#8CAA9E", "#D4A574"]
      }
    },
    "order": {
      "field": "Trade_Category",
      "sort": "ascending"
    }
    },
  "height": 300,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "config": {
    "view": {
      "stroke": null
    }
  }
}
