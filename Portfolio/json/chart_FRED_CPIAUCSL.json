{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Consumer Price Index",
    "fontSize": 16,
    "anchor": "start"
  },
  "width": 400,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/CAbourizk/CAbourizk.github.io/refs/heads/main/data_FRED_CPIAUCSL.json",
    "format": {
      "type": "json",
      "property": "observations"
    }
  },
  "transform": [
    {
      "filter": "datum.value != '.'"
    }
  ],
  "mark": {
    "type": "line",
    "color": "#377eb8",
    "strokeWidth": 2
  },
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": "Date",
      "axis": {
        "format": "%Y",
        "labelAngle": -45
      }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Index Value",
      "scale": {
        "zero": false
      }
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "title": "Date", "format": "%B %Y"},
      {"field": "value", "type": "quantitative", "title": "CPI", "format": ".2f"}
    ]
  },
  "config": {
    "view": {"strokeWidth": 0}
  }
}
