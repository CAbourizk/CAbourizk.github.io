{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Olive oil price distribution over time with 10-90 decile bands showing price spread",
  "title": {
    "text": "Olive Oil Prices in the UK",
    "subtitle": "Monthly prices with 10-90% decile bands",
    "anchor": "start"
  },
  "width": 700,
  "height": 400,
  "data": {
    "url": "data/chart5_olive_oil_distribution.csv",
    "format": {
      "type": "csv",
      "parse": {
        "date": "date:'%Y-%m-%d'"
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "area",
        "opacity": 0.15
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": "",
          "axis": {
            "format": "%Y",
            "labelAngle": 0
          }
        },
        "y": {
          "field": "p10",
          "type": "quantitative",
          "title": "Price (£)",
          "scale": {
            "domain": [0, 14]
          }
        },
        "y2": {
          "field": "p90"
        },
        "color": {
          "value": "#DE8F05"
        }
      }
    },
    {
      "mark": {
        "type": "area",
        "opacity": 0.2
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "p20",
          "type": "quantitative"
        },
        "y2": {
          "field": "p80"
        },
        "color": {
          "value": "#DE8F05"
        }
      }
    },
    {
      "mark": {
        "type": "area",
        "opacity": 0.25
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "p30",
          "type": "quantitative"
        },
        "y2": {
          "field": "p70"
        },
        "color": {
          "value": "#DE8F05"
        }
      }
    },
    {
      "mark": {
        "type": "area",
        "opacity": 0.3
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "p40",
          "type": "quantitative"
        },
        "y2": {
          "field": "p60"
        },
        "color": {
          "value": "#DE8F05"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2.5,
        "color": "#000000"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "field": "median",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "title": "Month",
            "format": "%B %Y"
          },
          {
            "field": "median",
            "type": "quantitative",
            "title": "Median Price",
            "format": "£.2f"
          },
          {
            "field": "p10",
            "type": "quantitative",
            "title": "10th Percentile",
            "format": "£.2f"
          },
          {
            "field": "p90",
            "type": "quantitative",
            "title": "90th Percentile",
            "format": "£.2f"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Number of Observations"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "labelFontSize": 11,
      "titleFontSize": 12,
      "grid": true,
      "gridOpacity": 0.3
    },
    "legend": {
      "labelFontSize": 11,
      "titleFontSize": 12
    }
  }
}
